<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xingfuyizhan"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lovebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lovefenxiang"
        android:layout_marginRight="52dp"
        android:src="@drawable/book" />
    <ImageView
        android:id="@+id/lovefenxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="39dp"
        android:layout_toLeftOf="@+id/lovebook"
        android:src="@drawable/fenxiang" />

    <TextView
        android:id="@+id/fenxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lovefenxiang"
        android:layout_alignTop="@+id/book"
        android:layout_marginLeft="19dp"
        android:text="@string/fenxiang"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lovebook"
        android:layout_below="@+id/lovebook"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:text="@string/book"
        android:textSize="15sp" />

</RelativeLayout>
